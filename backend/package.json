{
  "name": "backend",
  "description": "",
  "version": "2.0.0",
  "main": "",
  "author": "niten2",
  "license": "ISC",
  "node": "10.0.0",
  "keywords": [
    "node"
  ],
  "scripts": {
    "start": "NODE_ENV=production babel-node ./tools/run.js | ./node_modules/.bin/bunyan -o short -l trace",
    "dev": "node_modules/.bin/nodemon --exec babel-node ./tools/run.js | ./node_modules/.bin/bunyan -o short -l trace",
    "console": "node --require ./tools/babelhook ./tools/console.js",
    "tests": "jest --forceExit --runInBand",
    "test": "jest --watch --runInBand",
    "db:migrate": "node_modules/.bin/sequelize db:migrate && NODE_ENV=test node_modules/.bin/sequelize db:migrate && NODE_ENV=production node_modules/.bin/sequelize db:migrate",
    "db:migrate:test": "NODE_ENV=test node_modules/.bin/sequelize db:migrate",
    "db:migration": "node_modules/.bin/sequelize migration:create",
    "db:seed": "babel-node db/seed",
    "db:seed:production": "NODE_ENV=production babel-node db/seed",
    "db:drop": "rm -rf database.dev.sqlite",
    "db:drop:test": "rm -rf db/database.test.sqlite",
    "db:reset": "npm run db:drop; npm run db:migrate; npm run db:seed;",
    "db:reset:test": "npm run db:drop:test; npm run db:migrate:test",
    "db:vk:load:persons": "babel-node db/load/persons",
    "job": "NODE_ENV=development.job babel-node app/job/index.js | ./node_modules/.bin/bunyan -o short -l trace",
    "job:production": "NODE_ENV=production.job babel-node app/job/index.js | ./node_modules/.bin/bunyan -o short -l trace",
    "vk:persons:check:friends": "babel-node app/services/vk/scripts/check_friends.js",
    "vk:persons:add:friends": "babel-node app/services/vk/scripts/add_friend.js | ./node_modules/.bin/bunyan -o short -l trace",
    "vk:persons:add:friends:production": "NODE_ENV=production babel-node app/services/vk/scripts/add_friend.js | ./node_modules/.bin/bunyan -o short -l trace"
  },
  "dependencies": {
    "apollo-fetch": "^0.7.0",
    "apollo-server-express": "^1.3.6",
    "babel-cli": "^6.26.0",
    "babel-plugin-resolver": "^1.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "babyparse": "^0.4.6",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "~1.18.2",
    "bull": "^3.4.2",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-request": "^1.6.0",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.1",
    "jsonwebtoken": "^8.2.1",
    "moment": "^2.22.1",
    "ramda": "^0.25.0",
    "sequelize": "^4.37.7",
    "sequelize-cli": "^4.0.0",
    "sqlite": "^2.9.1",
    "subscriptions-transport-ws": "^0.9.9",
    "vk-io": "^4.0.0-beta.6"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "factory": "^1.0.3",
    "factory-girl": "^5.0.2",
    "faker": "^4.1.0",
    "fetch-mock": "^6.3.0",
    "jest": "^22.4.3",
    "mocha": "^5.1.1",
    "nock": "^9.2.5",
    "nodemon": "1.5.0",
    "supertest": "^3.0.0"
  }
}
